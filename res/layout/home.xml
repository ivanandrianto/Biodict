<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tusiri.biodict.MainActivity$PlaceholderFragment"
    android:background="@drawable/bg" >
<ImageButton android:id="@+id/buttonbakteri"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:focusable="true" 
    android:background="@drawable/bakteri">
</ImageButton>
<ImageButton android:id="@+id/buttonfungi"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:layout_below="@+id/buttonbakteri"
    android:focusable="true" 
    android:background="@drawable/fungi">
 </ImageButton>
<ImageButton android:id="@+id/buttonhewan"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:layout_below="@+id/buttonfungi"
    android:focusable="true" 
    android:background="@drawable/hewan">
 </ImageButton>
 <ImageButton android:id="@+id/buttonprotista"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:layout_below="@+id/buttonhewan"
    android:focusable="true" 
    android:background="@drawable/protista">
 </ImageButton>
 <ImageButton android:id="@+id/buttontumbuhan"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:layout_below="@+id/buttonprotista"
    android:focusable="true" 
    android:background="@drawable/tumbuhan">
 </ImageButton>
<ImageButton android:id="@+id/buttonrangka"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:layout_below="@+id/buttontumbuhan"
    android:focusable="true" 
    android:background="@drawable/rangka">
 </ImageButton>
</RelativeLayout>
